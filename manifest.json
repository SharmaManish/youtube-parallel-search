{

   "manifest_version": 2,
   
   "name": "Youtube Parallel Search",
   
   "version" : "2.2",
   
   "content_scripts": [ 
   
   {
      
	  "js": [ "js/jquery.js", "js/content_script.js"],
	  "css" : [ "css/scrollbar.css"],
      "matches": [ "*://*.youtube.com/watch*" ],
      "run_at": "document_end"
	  
   }
   
   ],
   
   "description": "Now search items while playing youtube videos",
   
   "icons": {
   
      "128": "images/icon128.png",
      "16": "images/icon16.png",
      "48": "images/icon48.png"
	  
   },

   "permissions": [ "tabs", "*://*.youtube.com/*"]
}
